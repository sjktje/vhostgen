CC =		@CC@
CFLAGS =	@CFLAGS@ @CPPFLAGS@ @DEFS@
LDFLAGS =	@LDFLAGS@ @LIBS@ @MYSQL_LIBS@
INCLUDE =	@MYSQL_CFLAGS@
PREFIX =	@prefix@
BINDIR =	$(PREFIX)/bin
ETCDIR =    $(PREFIX)/etc
OBJS = vhostgen.o @LIBOBJS@

all: vhostgen

vhostgen :		$(OBJS)
				$(CC) -o $@ $(OBJS) $(LDFLAGS) 
vhostgen.o :	vhostgen.c
				$(CC) $(CFLAGS) $(INCLUDE) -c vhostgen.c
install :
				$(INSTALL) -m 0750 vhostgen $(BINDIR)
				$(INSTALL) -m 0750 vhostgen.conf.example $(ETCDIR)
clean :
				-rm vhostgen vhostgen.o
distclean :
				-rm vhostgen vhostgen.o Makefile config.log config.h.in configure 
